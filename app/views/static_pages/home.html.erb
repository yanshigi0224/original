<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
        <%= render "words/word" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Diary</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
  <div class="col-md-4">
    
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Diary</h1>

    <%= link_to "アカウント登録", signup_path, class: "btn btn-lg btn-primary" %>　　
    <%= link_to "ログイン", login_path, class: "btn btn-lg btn-info" %>

  </div>
<% end %>