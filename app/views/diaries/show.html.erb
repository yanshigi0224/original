<div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
        <%= render "words/word" %>
      </section>
    </aside>

    <div class="col-md-8">
      <%= link_to gravatar_for(@diary.user, size: 50), @diary.user %>
      <span class="user"><%= link_to @diary.user.name, @diary.user %></span><br>
      <h3 class="title"><%= @diary.title %></h3><br>
      <span class="content"><%= @diary.content %><br></span><br>
      <span class="timestamp">
        ( Written on <%= @diary.created_at.strftime("%Y-%m-%d %H:%M:%S") %> )
        <% if current_user == @diary.user %>
          <%= link_to "delete", @diary, method: :delete,
                                           data: { confirm: "You sure?" } %>
        <% end %>
      </span>
    </div>
</div>