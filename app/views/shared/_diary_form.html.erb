<%= form_for(current_user.diaries.build) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :title, "タイトル : " %>
    <%= f.text_area :title, placeholder:"タイトル" %>
    <span class="content">
    <%= f.label :content, "本文 : " %>  
    <%= f.text_area :content, placeholder: "本文", rows:"10" %>
    </span>
  </div>
  <%= f.submit "投稿", class: "btn btn-primary" %>
<% end %>